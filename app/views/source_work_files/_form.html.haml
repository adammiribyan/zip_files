= form_for @source_work_file do |f|
  -if @source_work_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@source_work_file.errors.count, "error")} prohibited this source_work_file from being saved:"
      %ul
        - @source_work_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :file
    = f.text_field :file
  .actions
    = f.submit 'Save'
